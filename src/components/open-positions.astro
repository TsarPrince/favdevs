---
import Link from "./ui/link.astro";
const { openPositions } = Astro.props;
---

<div
  class="mt-24 max-w-3xl mx-auto flex flex-col items-center justify-center scroll-mt-20"
  id="open-positions">
  <!-- <Badge color="purple">MORE FEATURES</Badge> -->
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-4 text-center">
    {openPositions?.heading}
  </h2>
  <p class="text-lg mt-4 text-slate-600 text-center [text-wrap:pretty]">
    {openPositions?.subHeading}
  </p>
</div>

<div class="flex flex-col max-w-3xl mx-auto mt-16 gap-8 md:gap-16">
  {
    openPositions?.positions?.map((item) => (
      <div class="group flex flex-col gap-4 items-start group bg-slate-50 hover:bg-slate-100 border-transparent hover:border-slate-200 border rounded-lg transition-all md:-m-5 p-5">
        <div class="flex justify-between w-full">
          <div>
            <a href={"/contact"}>
              <h3 class="font-semibold text-lg">{item.position}</h3>
            </a>
            <p class="text-slate-500 mt-2 leading-relaxed">{item.mode}</p>
          </div>

          <a
            href={"/contact"}
            class="text-indigo-600 flex items-center justify-center px-4">
            &rarr;
          </a>
        </div>
      </div>
    ))
  }
</div>
