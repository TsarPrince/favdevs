---
import speaker from "@assets/hero/speaker.png";
import decor3 from "@assets/hero/decor3.webp";
import trophie from "@assets/hero/trophie.webp";
import expert1 from "@assets/hero/expert1.webp";
import expert2 from "@assets/hero/expert2.webp";
import expert3 from "@assets/hero/expert3.webp";
import Link from "./ui/link.astro";
---

<div class="max-w-sm md:max-w-max mx-auto overflow-hidden px-[20px]">
  <!-- header -->
  <div class="mx-auto md:mt-12 flex flex-col justify-center items-center">
    <h1
      class="mt-4 text-3xl lg:text-4xl xl:text-6xl font-bold [text-wrap:balance] text-center lg:text-start">
      Marketing without borders
    </h1>
    <p class="text-lg mt-4 text-slate-600 [text-wrap:balance] text-center">
      Amplify your business with our data-centric, performance-driven digital
      marketing solutions.
    </p>
  </div>

  <!-- decorative CTA - desktop -->
  <div class="hidden md:flex items-center justify-center space-x-12">
    <div class="relative mt-24">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        xmlns:xlink="http://www.w3.org/1999/xlink"
        width="519px"
        height="476px"
        viewBox="0 0 519 476"
        ><title>gettyimages-1387685447-2048x2048</title><defs
