---
import { sanityClient } from "sanity:client";
import urlFor from "@utils/urlFor";

const logos = await sanityClient.fetch(`*[_type == "logos"][0]`);
---

<div>
  <h2 class="text-center text-slate-500">
    {logos?.title}
  </h2>
  <div
    class="flex gap-x-12 gap-y-4 md:gap-20 lg:gap-20 items-center justify-center mt-6 flex-wrap">
    {
      logos?.logos?.map((logo) => (
        <div class="text-gray-500 my-2 h-7 md:h-9">
          <img src={urlFor(logo).url()} alt={logo.alt} />
        </div>
      ))
    }
  </div>
</div>
